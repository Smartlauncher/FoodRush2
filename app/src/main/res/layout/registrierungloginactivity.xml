<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/round_layout" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView11"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="17dp"
        android:text="Registrierung"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="64dp"
        android:text="Hey , schÃ¶n dich hier zu sehen"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/input_name"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/textView12"
        android:layout_alignParentTop="true"
        android:layout_marginTop="114dp"
        android:ems="10"
        android:hint="Name                         "
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/input_email"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/input_name"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="185dp"
        android:ems="10"
        android:hint="Email    "
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/input_telefonnummer"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/input_name"
        android:layout_alignParentTop="true"
        android:layout_marginStart="176dp"
        android:layout_marginTop="185dp"
        android:ems="10"
        android:hint="Telefonnummer"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/input_stadt"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/input_name"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="264dp"
        android:ems="10"
        android:hint="Stadt   "
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/input_geburtsdatum"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/input_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="176dp"
        android:layout_marginTop="114dp"
        android:layout_marginEnd="37dp"
        android:ems="10"
        android:hint="Geburtsdatum     "
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/beitreten"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView11"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-51dp"
        android:layout_marginBottom="71dp"
        android:text="Trete uns bei" />

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        android:text="Login"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/input_pass"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_above="@+id/beitreten"
        android:layout_alignStart="@+id/input_name"
        android:layout_alignParentTop="true"
        android:layout_marginStart="176dp"
        android:layout_marginTop="264dp"
        android:layout_marginBottom="134dp"
        android:ems="10"
        android:hint="Passwort"
        android:inputType="textPassword" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="122dp"
        app:srcCompat="@mipmap/ic_launcher_foreground" />

    <Spinner
        android:id="@+id/spinner_alter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="211dp" />

</RelativeLayout>