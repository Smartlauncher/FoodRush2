<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:windowSoftInputMode="adjustResize"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <include
        android:id="@+id/navigation"
        layout="@layout/appbar"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignParentStart="true"></include>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="184dp"
        android:layout_marginTop="33dp"
        app:srcCompat="@mipmap/rectangle" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="467dp"

        android:layout_below="@+id/navigation"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        app:srcCompat="@drawable/round_content_main_rec_holder" />

    <Button
        android:id="@+id/button_next_produkt"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="197dp"
        android:layout_marginTop="119dp"
        android:layout_toEndOf="@+id/spinner_anzahl"
        android:background="#fff"
        android:text="Next" />

    <Spinner
        android:id="@+id/spinner_anzahl"
        android:layout_width="54dp"
        android:layout_height="31dp"
        android:layout_alignTop="@+id/imageView4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimaryDark" />

    <EditText
        android:id="@+id/input_info"
        android:layout_width="wrap_content"
        android:layout_height="79dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="244dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="244dp"
        android:ems="10"
        android:hint="Weitere Infos"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:textColor="#000" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/input_wann_lebensmittel"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="135dp"
        android:text="â‚¬"
        android:textColor="#fff"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/input_wieviel_lebensmittel"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/input_wann_lebensmittel"
        android:layout_alignTop="@+id/imageView4"
        android:layout_marginStart="118dp"
        android:layout_marginTop="86dp"
        android:ems="10"
        android:hint="Bezahlung "
        android:inputType="number" />

    <EditText
        android:id="@+id/input_wo_lebensmittel"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/input_wann_lebensmittel"
        android:layout_alignTop="@+id/imageView4"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="235dp"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="18dp"
        android:ems="10"
        android:hint="Wo?"
        android:inputType="number" />

    <EditText
        android:id="@+id/input_lebensmittel"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/input_wann_lebensmittel"
        android:layout_alignEnd="@+id/imageView5"
        android:layout_alignParentTop="true"
        android:layout_marginStart="63dp"
        android:layout_marginTop="123dp"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:hint="Deine Lebensmittel"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/post"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="198dp"
        android:text="Post" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/input_lebensmittel"
        android:layout_alignParentTop="true"
        android:layout_marginTop="112dp" />

    <EditText
        android:id="@+id/input_wann_lebensmittel"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView4"
        android:layout_alignEnd="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="122dp"
        android:ems="10"
        android:hint="Wann"
        android:inputType="time" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="467dp"
        android:layout_marginBottom="0dp"
        app:srcCompat="@drawable/round_buy" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_list_2"
        android:layout_width="365dp"
        android:layout_height="79dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="480dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp" />

</RelativeLayout>